<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TeamGram</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" href="/css/site.css"/>
</head>
<body>
<div class="ui inverted fixed menu">
    <div class="ui container center aligned">
        <a href="@Url.Action("Index", "Home")" class="item">
            <img class="logo" src="/logo.png">
        </a>

        @if (!User.Identity.IsAuthenticated)
        {
            <div class="right menu">
                <a href="@Url.Action("LoginPage", "Authentication")" class="item">Login</a>
            </div>
        }
        else
        {
            <a href="@Url.Action("GreetingsPage", "Teamspeak")" class="item">Greetings</a>
            <a href="@Url.Action("FarewellsPage", "Teamspeak")" class="item">Farewells</a>
            <a href="@Url.Action("EmptyServerPage", "Teamspeak")" class="item">Empty server</a>

            <div class="right menu">
                <a href="@Url.Action("Logout", "Authentication")" class="item">Logout</a>
            </div>
        }
    </div>
</div>

<div class="main">
    @RenderBody()
</div>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
<script src="/js/site.js" asp-append-version="true"></script>

</body>
</html>